# Hyperparameters follow Hessel et al. (2018), except for sticky_actions,
# which was False (not using sticky actions) in the original paper.
import dopamine.agents.rainbow.rainbow_agent
import dopamine.discrete_domains.custom_lib
import dopamine.discrete_domains.run_experiment
import dopamine.replay_memory.prioritized_replay_buffer
import gin.tf.external_configurables

RainbowAgent.observation_shape = %custom_lib.DGG_OBSERVATION_SHAPE
RainbowAgent.observation_dtype = %custom_lib.DGG_OBSERVATION_DTYPE
RainbowAgent.stack_size = %custom_lib.DGG_STACK_SIZE
DoubleGaussianAgent.print_freq = 100
DoubleGaussianAgent.loss_mode = 'mse+kle'
Runner.clip_rewards = False
RainbowAgent.gamma = 0.99
RainbowAgent.update_horizon = 1
RainbowAgent.min_replay_history = 10  # agent steps
RainbowAgent.update_period = 4
RainbowAgent.target_update_period = 80  # agent steps
RainbowAgent.epsilon_fn = @dopamine.agents.dqn.dqn_agent.linearly_decaying_epsilon
RainbowAgent.epsilon_train = 0.002
RainbowAgent.epsilon_eval = 0.0005
RainbowAgent.epsilon_decay_period = 2000
RainbowAgent.replay_scheme = 'prioritized'
RainbowAgent.tf_device = '/gpu:0'  # use '/cpu:*' for non-GPU version
RainbowAgent.optimizer = @tf.train.AdamOptimizer()

# Note these parameters are different from C51's.
tf.train.AdamOptimizer.learning_rate = 0.0000625
tf.train.AdamOptimizer.epsilon = 0.00015

custom_lib.get_custom_environment.environment_name='DoubleGaussianGame'
create_agent.agent_name = 'dg'
Runner.create_environment_fn = @custom_lib.get_custom_environment
create_runner.schedule = 'continuous_train_and_eval'
Runner.num_iterations = 200
Runner.training_steps = 2500  # agent steps
Runner.evaluation_steps = 250  # agent steps
Runner.max_steps_per_episode = 27000  # agent steps

WrappedPrioritizedReplayBuffer.replay_capacity = 200
WrappedPrioritizedReplayBuffer.batch_size = 32

# MWG算法的标准实现配置文件
import dopamine.agents.rainbow.rainbow_agent
import dopamine.discrete_domains.atari_lib
import dopamine.discrete_domains.run_experiment
import dopamine.replay_memory.prioritized_replay_buffer
import gin.tf.external_configurables

MultiWeightGaussianAgent.print_freq = 100000
MultiWeightGaussianAgent.loss_mode = 'mse'
MultiWeightGaussianAgent.action_mode = 'mean'
MultiWeightGaussianAgent.before_project_mix_samples = True
MultiWeightGaussianAgent.prob_clib_value = 0.004
MultiWeightGaussianAgent.per_mode = 'kl'
Runner.clip_rewards = False
RainbowAgent.gamma = 0.99
RainbowAgent.update_horizon = 3
RainbowAgent.min_replay_history = 10000  # agent steps
RainbowAgent.update_period = 4
RainbowAgent.target_update_period = 8000  # agent steps
RainbowAgent.epsilon_fn = @dopamine.agents.dqn.dqn_agent.linearly_decaying_epsilon
RainbowAgent.epsilon_train = 0.00
RainbowAgent.epsilon_eval = 0.000
RainbowAgent.epsilon_decay_period = 200000
RainbowAgent.replay_scheme = 'prioritized'
RainbowAgent.tf_device = '/gpu:0'  # use '/cpu:*' for non-GPU version
RainbowAgent.optimizer = @tf.train.AdamOptimizer()

# Note these parameters are different from C51's.
tf.train.AdamOptimizer.learning_rate = 0.0000625
tf.train.AdamOptimizer.epsilon = 0.00015

atari_lib.create_atari_environment.game_name = 'Zaxxon'
# Sticky actions with probability 0.25, as suggested by (Machado et al., 2017).
atari_lib.create_atari_environment.sticky_actions = True
create_runner.schedule = 'continuous_train'
create_agent.agent_name = 'mwg'
Runner.num_iterations = 200
Runner.training_steps = 250000  # agent steps
Runner.evaluation_steps = 125000  # agent steps
Runner.max_steps_per_episode = 27000  # agent steps

WrappedPrioritizedReplayBuffer.replay_capacity = 1000000
WrappedPrioritizedReplayBuffer.batch_size = 32
